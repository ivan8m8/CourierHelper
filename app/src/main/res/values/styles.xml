<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeOverlay.BaseModalBottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BaseModalBottomSheetStyle</item>
    </style>

    <style name="BaseModalBottomSheetStyle" parent="Widget.Material3.BottomSheet.Modal">
        <item name="paddingBottomSystemWindowInsets">false</item>
    </style>

    <style name="DeliveriesBottomSheet" parent="RoundedBottomSheet">
        <item name="backgroundTint">#f8f8f8</item>
    </style>

    <style name="RoundedBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/RoundedBottomSheetShapeAppearanceOverlay</item>
    </style>

    <style name="RoundedBottomSheetShapeAppearanceOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!-- https://github.com/material-components/material-components-android/issues/820 -->
    <style name="ThemeOverlay.AppTheme.TextInputEditText.OutlinedBox.Dense" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox.Dense">
        <item name="colorControlActivated">@color/colorSecondary</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.FilledBox.Dense" parent="ThemeOverlay.Material3.TextInputEditText.FilledBox.Dense">
        <item name="colorControlActivated">@color/colorSecondary</item>
    </style>

    <style name="DeliveryTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorBaseBlack</item>
        <item name="hintTextColor">@color/colorBaseBlack</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.AppTheme.TextInputEditText.OutlinedBox.Dense</item>
    </style>
    
    <style name="Widget.AppTheme.TextInputLayout.FilledBox.Dense" parent="Widget.Material3.TextInputLayout.FilledBox.Dense">
        <item name="materialThemeOverlay">@style/ThemeOverlay.AppTheme.TextInputEditText.FilledBox.Dense</item>
    </style>

    <style
        name="DeliveryDropdownMenuInputLayout"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/colorBaseBlack</item>
        <item name="hintTextColor">@color/colorBaseBlack</item>
        <item name="endIconTint">@color/colorBaseBlack</item>
    </style>
</resources>