<resources>
    <!-- Base application theme. -->
    <style name="Theme.CourierHelper" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/amber_900</item>
        <item name="colorPrimaryVariant">@color/amber_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amber_900</item>
        <item name="colorSecondaryVariant">@color/amber_900</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@color/amber_900</item>
        <item name="android:navigationBarColor">@color/amber_900</item>
    </style>
</resources>